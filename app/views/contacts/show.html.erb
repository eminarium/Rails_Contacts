<br/>
<p id="notice"><%= notice %></p>

<div class="container">
	<div class="card">
		<div class="card-header"> <b><%= @contact.title %></b> </div>
		<div class="card-body">
			<table>

				<tr>
					<td>Kategoriýasy</td> 
					<td> &nbsp; : &nbsp; </td>
					<td> <%= @contact.category.title %> </td>
				</tr>

				<tr>
					<td>Salgysy</td> 
					<td> &nbsp; : &nbsp; </td>
					<td> <%= @contact.address %> </td>
				</tr>

				<tr>
					<td>Teswiri</td> 
					<td> &nbsp; : &nbsp; </td>
					<td> <%= @contact.description %> </td>
				</tr>

				<tr>
					<td colspan="3">&nbsp;</td>
				</tr>

				<tr>
					<td colspan="3">
						<%= link_to contacts_path do %>
							<button class="btn btn-primary">Yza</button>
						<% end %>
						<%= link_to edit_contact_path(@contact) do %>
							<button type="button" class="btn btn-warning"> Üýtget</button>
						<% end %>
						<%= link_to @contact, method: :delete, data: { confirm: "Are you sure ?" }  do %>
							<button type="button" class="btn btn-danger"> Boz</button>
						<% end %>
					</td> 
				</tr>

			</table>
		</div>
	</div>
</div>