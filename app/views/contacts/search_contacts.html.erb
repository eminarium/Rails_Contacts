<h1> Gözleg Netijesi </h1>

<br/>
<br/>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Kontakt</th>
      <th>Salgysy</th>
      <th>Kategoriýasy</th>
      <th>Teswiri</th>
      <th>Amallar</th>
    </tr>
  </thead>

  <tbody>

    <% if @contacts.empty? %>
      <tr><td colspan="5">Gözleg parametrleri boýunça hiç kontakt tapylmady...</td></tr>
    <% else %>

        <% @contacts.each do |contact| %>
          <tr>
            <td> <%= link_to contact.title , contact %> </td>
            <td> <%= contact.address %> </td>
            <td> <%= contact.category.title %> </td>
            <td> <%= contact.description %> </td>
            <td> 
              <%= link_to contact do %>
                <i class="fa fa-info-circle"></i>
              <% end %> 
              &nbsp;
              <%= link_to edit_contact_path(contact) do %>
                <i class="fa fa-edit"></i>
              <% end %> 
            </td>
          </tr>
        <% end %>

    <% end %>
  </tbody>

</table>